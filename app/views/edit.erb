<form method = "POST" action = "/recipes/<%=@recipe.id%>">
<input id = "hidden" type = "hidden" name= "_method" value = "PATCH">
<p>Recipe Name: <input type = "text" name = "name" id = "name" value = "<%= @recipe.name %>"></p>
<p>Recipe Ingredients: <input type = "text" id = "ingredients" name = "ingredients" value = "<%= @recipe.ingredients%>"></p>
<p>Recipe Cook Time: <input type = "text" id = "cook_time" name = "cook_time" value = "<%= @recipe.cook_time%>">
<input type = "submit" id = "submit" value = "submit"></p>
</form>